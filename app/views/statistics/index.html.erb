<h2>Files</h2>

<%= link_to 'Upload a File', new_statistic_path %>
<br><br>

<table>

  <tr>
    <th>Filename</th>
    <th colspan="3"></th>
  </tr>
 
  <% @statistics.each do |file| %>
    <tr>
      <td><%= file.filename %></td>
      <td><%= link_to 'Run MLR', statistic_path(file) %></td>
      <td><%= link_to 'Edit', edit_statistic_path(file) %></td>
      <td><%= link_to 'Destroy', statistic_path(file),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>