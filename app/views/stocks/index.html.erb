<h1>Stock list</h1>
<h4>Powered by the Yahoo Finance API</h4>
<br>

<%= link_to 'Add a stock', new_stock_path %>
<br><br>

<table>

  <tr>
    <th>Name</th>
    <th>Stock ID</th>
    <th>Stock Price</th>
    <th>Last Updated</th>
    <th colspan="3"></th>
  </tr>
 
  <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.name %></td>
      <td><%= stock.stockID %></td>
      <td><%= stock.price %></td>
      <td><%= stock.updated_at %></td>
      <td><%= link_to 'Update Price', stock_path(stock) %></td>
      <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
      <td><%= link_to 'Destroy', stock_path(stock),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>